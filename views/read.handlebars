<!-- Modal -->
 <!-- The Modal -->
  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content text-white bg-primary mb-3">
      
        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add new snippet to story</h4>
          <button type="button" class="close " data-dismiss="modal">&times;</button>
        </div>
        
        <!-- Modal body -->
        <div class="modal-body">
         <div class="row justify-content-md-center">
			<br>
			<form data-id="{{this.id}}" class="create-snippet-form">
				<div class="form-group col col-md-3">
				    <label for="auth"><p>Author:</p></label>
				    <input type="text" id="auth" name="author" >
				</div>
				<div class="form-group col col-md-6">
				  <label for="snip"><p>Snippet:</p></label>
				    <textarea id="snip" name="snippet" rows="5" cols="50"></textarea>
				</div>
				<div class="col col-md-3">
				  <button type="submit" class="btn btn-primary">Submit</button>
				</div>
			</form>
		</div>
        </div>
        
        <!-- Modal footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
        </div>
        
      </div>
    </div>
